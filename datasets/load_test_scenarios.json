{
  "metadata": {
    "version": "1.0.0",
    "description": "Load testing scenarios for performance validation",
    "created": "2024-01-01",
    "last_updated": "2024-01-01",
    "total_scenarios": 10
  },
  "scenarios": {
    "smoke_test": {
      "name": "Smoke Test",
      "description": "Basic functionality under minimal load",
      "duration": "2m",
      "vus": 5,
      "requests_per_second": 1,
      "expected_p95": 1000,
      "expected_error_rate": 0.0
    },
    "normal_load": {
      "name": "Normal Load",
      "description": "Typical production load",
      "duration": "10m",
      "vus": 50,
      "requests_per_second": 10,
      "expected_p95": 500,
      "expected_error_rate": 0.01
    },
    "peak_load": {
      "name": "Peak Load",
      "description": "High traffic scenario",
      "duration": "15m",
      "vus": 200,
      "requests_per_second": 50,
      "expected_p95": 800,
      "expected_error_rate": 0.02
    },
    "stress_test": {
      "name": "Stress Test",
      "description": "Beyond normal capacity",
      "duration": "20m",
      "vus": 500,
      "requests_per_second": 100,
      "expected_p95": 2000,
      "expected_error_rate": 0.05
    },
    "spike_test": {
      "name": "Spike Test",
      "description": "Sudden traffic spikes",
      "duration": "30m",
      "vus": 1000,
      "requests_per_second": 200,
      "expected_p95": 5000,
      "expected_error_rate": 0.1
    },
    "soak_test": {
      "name": "Soak Test",
      "description": "Extended duration test",
      "duration": "4h",
      "vus": 100,
      "requests_per_second": 20,
      "expected_p95": 1000,
      "expected_error_rate": 0.01
    },
    "mixed_traffic": {
      "name": "Mixed Traffic",
      "description": "Varied request types and sizes",
      "duration": "15m",
      "vus": 150,
      "requests_per_second": 30,
      "expected_p95": 600,
      "expected_error_rate": 0.02,
      "traffic_mix": {
        "simple_requests": 0.6,
        "complex_requests": 0.3,
        "large_requests": 0.1
      }
    },
    "multilingual_load": {
      "name": "Multilingual Load",
      "description": "Mixed language requests",
      "duration": "10m",
      "vus": 100,
      "requests_per_second": 25,
      "expected_p95": 700,
      "expected_error_rate": 0.02,
      "language_mix": {
        "en": 0.5,
        "vi": 0.3,
        "fr": 0.1,
        "jp": 0.1
      }
    },
    "error_injection": {
      "name": "Error Injection",
      "description": "Test error handling under load",
      "duration": "10m",
      "vus": 75,
      "requests_per_second": 15,
      "expected_p95": 800,
      "expected_error_rate": 0.1,
      "error_rate": 0.2
    },
    "recovery_test": {
      "name": "Recovery Test",
      "description": "Test system recovery after failures",
      "duration": "20m",
      "vus": 50,
      "requests_per_second": 10,
      "expected_p95": 1000,
      "expected_error_rate": 0.05,
      "failure_injection": true
    }
  },
  "request_templates": {
    "simple_request": {
      "method": "POST",
      "url": "/chat",
      "body": {
        "prompt": "Hello, how are you?",
        "context": {}
      }
    },
    "complex_request": {
      "method": "POST",
      "url": "/chat",
      "body": {
        "prompt": "Write a detailed analysis of the current market trends in AI technology, including specific examples and recommendations for businesses looking to adopt AI solutions.",
        "context": {
          "max_tokens": 1000,
          "temperature": 0.7
        }
      }
    },
    "large_request": {
      "method": "POST",
      "url": "/chat",
      "body": {
        "prompt": "Process this large document and provide a comprehensive summary with key insights, recommendations, and action items.",
        "context": {
          "document": "A very long document with thousands of words...",
          "max_tokens": 2000
        }
      }
    }
  }
}

