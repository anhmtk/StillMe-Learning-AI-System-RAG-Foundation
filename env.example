# StillMe Environment Configuration Template
# Copy to .env and fill in real values (DO NOT COMMIT .env)

# VPS Gateway Configuration
GATEWAY_PORT=21568
LOCAL_BACKEND_URL=http://localhost:1216   # Always localhost on VPS (SSH reverse tunnel)
REQUEST_CONNECT_TIMEOUT=10
REQUEST_READ_TIMEOUT=20
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
ALLOWED_ORIGINS=*                         # CORS if needed

# Authentication between Gateway <-> Backend (shared secret)
GATEWAY_SECRET=change_me_super_secret     # Copy manually to .env on both sides

# Cloud Model Configuration (if needed)
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_API_KEY=__SET_IN_VPS_ONLY__

# Local Backend Configuration
BACKEND_PORT=1216
OLLAMA_BASE_URL=http://127.0.0.1:11434
GEMMA_TIMEOUT=3.0
DEEPSEEK_TIMEOUT=30.0
DEEPSEEK_RETRY=2
DEEPSEEK_BACKOFF=2.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s: %(message)s
