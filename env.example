# StillMe AI Framework Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# =============================================================================
# CORE FRAMEWORK SETTINGS
# =============================================================================

# Dry Run Mode (for testing/development)
STILLME_DRY_RUN=1

# Router Mode: stub (default), pro (requires stillme-private package)
STILLME_ROUTER_MODE=stub

# Careful Mode (extra validation)
STILLME_CAREFUL_MODE=false

# Data Retention (days)
STILLME_DATA_RETENTION_DAYS=30

# =============================================================================
# API KEYS (if using external services)
# =============================================================================

# OpenAI API
OPENAI_API_KEY=sk-xxxx

# OpenRouter API (for content filtering)
OPENROUTER_API_KEY=sk-or-xxxx

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-xxxx

# DeepSeek API
DEEPSEEK_API_KEY=sk-xxxx

# =============================================================================
# OLLAMA SETTINGS
# =============================================================================

# Ollama Base URL
OLLAMA_BASE_URL=http://127.0.0.1:11434

# Ollama Models
OLLAMA_MODEL_FAST=llama3.2:3b
OLLAMA_MODEL_SAFE=llama3.2:3b

# =============================================================================
# RUNTIME SETTINGS
# =============================================================================

# Runtime Base URL
RUNTIME_BASE_URL=http://localhost:8000

# Logging Level
LOG_LEVEL=INFO

# Privacy Mode: strict, balanced, permissive
PRIVACY_MODE=balanced

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# PII Redaction
ENABLE_PII_REDACTION=true

# Content Filtering
ENABLE_CONTENT_FILTERING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Max Concurrent Requests
MAX_CONCURRENT_REQUESTS=10

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
DEBUG=false

# Enable Metrics
ENABLE_METRICS=true

# Offline Mode (for testing)
OFFLINE_MODE=false

# Mock Providers (for testing)
MOCK_PROVIDERS=false

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Email Notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=REPLACE_ME_WITH_YOUR_APP_PASSWORD
# ALERT_EMAIL=alerts@yourdomain.com

# Telegram Notifications
# TELEGRAM_BOT_TOKEN=REPLACE_ME_WITH_YOUR_BOT_TOKEN
# TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# News API
# NEWSAPI_KEY=your_newsapi_key

# GNews API
# GNEWS_API_KEY=your_gnews_key

# GitHub Token
# GITHUB_TOKEN=your_github_token