# StillMe Environment Configuration
# =================================

# Timezone
STILLME_TZ=Asia/Ho_Chi_Minh

# Metrics System
STILLME_METRICS_ENABLE=1
STILLME_METRICS_DB=data/metrics/metrics.db
STILLME_METRICS_EVENTS_DIR=data/metrics/events
STILLME_METRICS_PII_REDACT=1

# Dashboard
STILLME_DASHBOARD_PORT=8501
STILLME_DASHBOARD_HOST=localhost
STILLME_DASHBOARD_THEME=light

# Learning System
STILLME_LEARNING_ENABLED=1
STILLME_LEARNING_DAILY_TRAINING_MINUTES=30
STILLME_LEARNING_ASSESSMENT_FREQUENCY_HOURS=6
STILLME_LEARNING_EVOLUTION_CHECKPOINT_DAYS=7

# Approval System
STILLME_APPROVAL_ENABLED=1
STILLME_APPROVAL_AUTO_THRESHOLD=0.9
STILLME_APPROVAL_REQUIRE_HUMAN=1

# Alerting
STILLME_ALERTS_ENABLED=1
STILLME_ALERTS_EMAIL_ENABLED=0
STILLME_ALERTS_TELEGRAM_ENABLED=0
STILLME_ALERTS_DESKTOP_ENABLED=1

# Email Configuration (if enabled)
STILLME_EMAIL_SMTP_SERVER=
STILLME_EMAIL_USER=
STILLME_EMAIL_PASS=
STILLME_EMAIL_FROM=

# Telegram Configuration (if enabled)
STILLME_TELEGRAM_BOT_TOKEN=
STILLME_TELEGRAM_CHAT_ID=

# Security
STILLME_SECURITY_ENABLED=1
STILLME_SECURITY_ENCRYPTION_KEY=
STILLME_SECURITY_HASH_SALT=

# Performance
STILLME_PERFORMANCE_MONITORING=1
STILLME_PERFORMANCE_PROFILING=0
STILLME_PERFORMANCE_CACHING=1

# CI/CD
STILLME_CI_ENABLED=1
STILLME_CI_BADGES=1
STILLME_CI_ARTIFACTS=1

# GitHub Integration (if enabled)
GITHUB_TOKEN=
GITHUB_REPOSITORY=stillme-ai/stillme
GITHUB_BRANCH=main

# Development
STILLME_DEBUG=0
STILLME_LOG_LEVEL=INFO
STILLME_LOG_FORMAT=json

# Privacy
STILLME_PRIVACY_AUDIT=1
STILLME_PRIVACY_ANONYMIZE=1
STILLME_PRIVACY_RETENTION_DAYS=365

# Export
STILLME_EXPORT_CSV=1
STILLME_EXPORT_JSON=1
STILLME_EXPORT_EXCEL=0
