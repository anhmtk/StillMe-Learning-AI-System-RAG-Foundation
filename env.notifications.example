# StillMe Email Notification Configuration
# Copy this file to .env and fill in your actual values

# Email Settings (Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
ALERT_EMAIL=anhnguyen.nk86@gmail.com

# Email Display Settings
EMAIL_FROM_NAME=StillMe AI System
EMAIL_FROM_EMAIL=your-email@gmail.com
EMAIL_REPLY_TO=your-email@gmail.com

# Email Security Settings
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_TIMEOUT=30
EMAIL_MAX_RETRIES=3

# SMS Settings (Twilio - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
ALERT_PHONE=+84901234567

# Slack Settings (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# Telegram Settings (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Notification Settings
ESCALATION_ENABLED=true
ESCALATION_TIMEOUT_MINUTES=15
