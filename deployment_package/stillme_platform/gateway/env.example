# StillMe Gateway Environment Configuration
# Copy this file to .env and update values

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
DEV_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# StillMe AI Integration
STILLME_AI_URL=http://127.0.0.1:2377

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here

# Database (for production gateway)
DATABASE_URL=postgresql://user:password@localhost/stillme_gateway

# Redis (for production gateway)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=gateway.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
