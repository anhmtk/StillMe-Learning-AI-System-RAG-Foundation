# StillMe V2.0 - Environment Configuration
# Copy this file to .env and fill in your actual values

# Core Configuration
STILLME_DRY_RUN=1
STILLME_TZ=Asia/Ho_Chi_Minh
RUNTIME_BASE_URL=http://localhost:8000

# AI Provider API Keys (Required)
DEEPSEEK_API_KEY=sk-REPLACE_ME_WITH_YOUR_DEEPSEEK_KEY

# Database Configuration
DATABASE_URL=sqlite:///./stillme_v2.db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=REPLACE_ME_WITH_YOUR_API_KEY

# Learning Configuration
MAX_DAILY_PROPOSALS=50
AUTO_APPROVAL_THRESHOLD=0.8
LEARNING_SESSION_HOUR=9  # 9 AM daily learning

# RSS Sources (comma-separated)
RSS_SOURCES=https://hnrss.org/frontpage,https://www.reddit.com/r/MachineLearning.rss,https://github.com/trending.rss

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Notification Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=REPLACE_ME_WITH_YOUR_APP_PASSWORD
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com

# Telegram Notifications
TELEGRAM_BOT_TOKEN=REPLACE_ME_WITH_YOUR_BOT_TOKEN
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Notification Settings
NOTIFY_ON_LEARNING_SESSION=1
NOTIFY_ON_EVOLUTION_STAGE=1
NOTIFY_ON_ERRORS=1
NOTIFY_ON_NEW_SOURCES=1

# Development
DEBUG=1
LOG_LEVEL=INFO
