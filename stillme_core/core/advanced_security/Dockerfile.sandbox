# Dockerfile for StillMe Security Sandbox
# Dockerfile cho StillMe Security Sandbox

FROM python:3.9-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV SANDBOX_MODE=security_test
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r sandbox && useradd -r -g sandbox sandbox

# Set working directory
WORKDIR /workspace

# Copy requirements and install Python dependencies
COPY requirements_sandbox.txt /workspace/
RUN pip install --no-cache-dir -r requirements_sandbox.txt

# Copy application code
COPY . /workspace/

# Set ownership to sandbox user
RUN chown -R sandbox:sandbox /workspace

# Switch to non-root user
USER sandbox

# Create necessary directories
RUN mkdir -p /workspace/logs /workspace/tmp /workspace/data

# Set up security constraints
# - No network access (handled by Docker network mode)
# - Limited file system access
# - Resource limits (handled by Docker)

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import stillme_core; print('Health check passed')" || exit 1

# Default command
CMD ["python", "-c", "import stillme_core; print('StillMe Sandbox ready')"]
