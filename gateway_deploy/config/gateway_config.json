{
  "gateway": {
    "host": "0.0.0.0",
    "port": 8001,
    "debug": false,
    "reload": false,
    "log_level": "info"
  },
  "cors": {
    "allowed_origins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:3001"
    ],
    "allowed_hosts": [
      "localhost",
      "127.0.0.1",
      "0.0.0.0"
    ]
  },
  "database": {
    "url": "sqlite+aiosqlite:///./gateway.db",
    "echo": false,
    "pool_size": 5,
    "max_overflow": 10
  },
  "redis": {
    "url": "redis://localhost:6379",
    "max_connections": 10,
    "retry_on_timeout": true
  },
  "websocket": {
    "max_connections": 1000,
    "heartbeat_interval": 30,
    "connection_timeout": 300
  },
  "security": {
    "jwt_secret": "your-secret-key-here",
    "jwt_algorithm": "HS256",
    "jwt_expiration": 3600,
    "rate_limit": {
      "requests_per_minute": 60,
      "burst_size": 10
    }
  },
  "stillme_integration": {
    "ai_server_url": "http://localhost:8000",
    "timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 1
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "file": "logs/gateway.log",
    "max_size": "10MB",
    "backup_count": 5
  }
}
